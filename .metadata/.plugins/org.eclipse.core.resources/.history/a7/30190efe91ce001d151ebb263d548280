package entities;

public class Lista {
	
	private Integer id;
	private String name;
	private Double salary;
	
	public Lista(Integer id, String name, Double salary) {
		this.id = id;
		this.name = name;
		this.salary = salary;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public double getSalary() {
		return salary;
	}
	public void setSalary(double salary) {
		this.salary = salary;
	}
	public Integer getId() {
		return id;
	}
	
	public void porcentagem(double porcentagem) {
		salary = (salary * porcentagem/100) + salary;
	}
	
	
}
