package app;

public class Main2 {
	
    public static void main(String[] args) {
    	
        String operacao = "52 + 29";
        
        System.out.println(conversor(operacao));

    }
    
    public static int conversor(String conta) {
    	String[] partes = conta.split("\\s+");
    	for (int i = 0; i < partes.length; i++) {
    		if 
        int numero1 = Integer.parseInt(partes[0]);
        String operador = partes[1];
        int numero2 = Integer.parseInt(partes[2]);
    	}
        
        int resultado = 0;
        if (operador.equals("+")) {
            resultado = numero1 + numero2;
        }
		return resultado;
    }
}