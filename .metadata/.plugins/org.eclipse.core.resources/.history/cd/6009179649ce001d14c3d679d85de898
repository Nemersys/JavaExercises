package entities;

public class Triangulo {
	
	private double largura;
	private double altura;
	
	public Triangulo(double largura, double altura) {
		super();
		this.largura = largura;
		this.altura = altura;
	}
	
	public double area() {
		return largura * altura;
	}
	
	public double perimetro() {
		return altura * 2 + largura * 2;
	}

}
