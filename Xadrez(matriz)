class Main {
  public static void main(String[] args) {
   String[][] matriz2 = new String[8][8];
	  
	  for (int i = 0; i<8; i++) {
		  for (int j = 0; j<8; j++) {
			  if ((i + j) % 2 == 0) {
				  matriz2[i][j] = "O";
			  } else {
				  matriz2[i][j] = "X";
			  }
			  
		  }
	  }
		
	  for (int i = 0; i<8; i++) {
        System.out.println();
	      for (int j = 0; j<8; j++) {
	    	  System.out.print(" " + matriz2[i][j]);
	      }
   }
  }
}
