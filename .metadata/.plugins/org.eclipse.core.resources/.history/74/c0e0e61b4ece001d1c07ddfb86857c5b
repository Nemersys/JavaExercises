package application;

import java.util.Scanner;

import entities.Conta;

public class App {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Acc number: ");
		Integer number = sc.nextInt();
		System.out.println("acc holder: ");
		String holder = sc.nextLine();
		System.out.println("initial deposit? (y/n)");
		String resposta = sc.next();
		
		Conta conta = Conta(number, holder, balance);
		
		if (resposta.contains("y")) {
			System.out.println("deposit: ");
			double deposit = sc.nextDouble();
			conta.deposit(deposit);
		}
		
		System.out.println("withdraw: ");
		double withdraw = sc.nextDouble();
		conta.withdraw(withdraw);

		
		sc.close();

	}

}
